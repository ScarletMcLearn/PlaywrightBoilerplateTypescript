{
  "name": "playwrightboilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint-file": "eslint",
    "lint-dir": "eslint .",
    "lint": "eslint .",
    "lint-test": "npm run lint -- $1 || true && npm run test -- $1",
    "lint-test-dir": "npm run lint-dir -- $1 || true && npm run test-dir -- $1",
    "test": "npx playwright test",
    "test-headed": "npx playwright test --headed",
    "test-debug": "npx playwright test --debug",
    "test-report": "npx playwright show-report",
    "test-slowmo": "npx playwright test --headed --slow-mo 1000",
    "test-grep": "npx playwright test --grep",
    "test-ui": "npx playwright test --ui",
    "test-project": "npx playwright test --project",
    "test-update-snapshots": "npx playwright test --update-snapshots",
    "test-retry": "npx playwright test --retries 2",
    "test-parallel": "npx playwright test --workers=4",
    "prettier-format": "prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "prettier-lint": "prettier --check 'src/**/*.{ts,tsx,js,jsx}'"
  },
  "dummy": {
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "lint-test": "npm run lint || true && npm run test",
    "lint-file": "eslint",
    "test-file": "npx playwright test",
    "lint-dir": "eslint",
    "test-dir": "npx playwright test",
    "lint-test-file": "npm run lint-file -- $1 || true && npm run test-file -- $1",
    "lint-test-dir": "npm run lint-dir -- $1 || true && npm run test-dir -- $1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^2.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "typescript-eslint": "^8.14.0"
  }
}
